@tailwind base;
@tailwind components;
@tailwind utilities;

/* MLETRAS Design System - Musical Theme with Beautiful Gradients */

/* Status Bar Handling for Web App */
@supports (padding: max(0px)) {
  body {
    padding-top: env(safe-area-inset-top);
    padding-bottom: env(safe-area-inset-bottom);
    padding-left: env(safe-area-inset-left);
    padding-right: env(safe-area-inset-right);
  }
}

/* Ensure status bar area doesn't overlap content */
#root {
  min-height: 100vh;
  position: relative;
}

@layer base {
  :root {
    /* MLETRAS Light Theme - Musical Colors */
    --background: 0 0% 100%;
    --foreground: 220 26% 8%;

    --card: 0 0% 100%;
    --card-foreground: 220 26% 8%;

    --popover: 0 0% 100%;
    --popover-foreground: 220 26% 8%;

    /* Musical Purple Primary */
    --primary: 259 94% 51%;
    --primary-foreground: 210 40% 98%;
    --primary-glow: 259 94% 61%;

    /* Musical Blue Secondary */
    --secondary: 220 26% 95%;
    --secondary-foreground: 220 26% 8%;

    --muted: 220 26% 96%;
    --muted-foreground: 215 20.2% 45%;

    /* Accent Colors */
    --accent: 259 94% 51%;
    --accent-foreground: 210 40% 98%;
    --accent-light: 259 94% 61%;

    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 210 40% 98%;

    --border: 220 26% 90%;
    --input: 220 26% 95%;
    --ring: 259 94% 51%;

    --radius: 1rem;

    /* Musical Gradients */
    --gradient-primary: linear-gradient(
      135deg,
      hsl(259 94% 51%),
      hsl(217 91% 60%)
    );
    --gradient-secondary: linear-gradient(
      135deg,
      hsl(220 26% 95%),
      hsl(220 26% 90%)
    );
    --gradient-accent: linear-gradient(
      135deg,
      hsl(259 94% 61%),
      hsl(259 94% 51%)
    );
    --gradient-hero: linear-gradient(
      135deg,
      hsl(259 94% 51%) 0%,
      hsl(217 91% 60%) 50%,
      hsl(259 94% 61%) 100%
    );

    /* Glass Effects */
    --glass-bg: hsla(0, 0%, 100%, 0.4);
    --glass-border: hsla(259, 94%, 51%, 0.2);

    /* Shadows */
    --shadow-glow: 0 0 40px hsla(259, 94%, 51%, 0.3);
    --shadow-soft: 0 10px 30px -10px hsla(220, 26%, 0%, 0.1);

    /* Animations */
    --transition-smooth: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    --transition-spring: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);

    /* Safe Area Insets for iPhone notch/Dynamic Island */
    --safe-area-inset-top: env(safe-area-inset-top);
    --safe-area-inset-bottom: env(safe-area-inset-bottom);
    --safe-area-inset-left: env(safe-area-inset-left);
    --safe-area-inset-right: env(safe-area-inset-right);

    --sidebar-background: 0 0% 98%;
    --sidebar-foreground: 240 5.3% 26.1%;
    --sidebar-primary: 240 5.9% 10%;
    --sidebar-primary-foreground: 0 0% 98%;
    --sidebar-accent: 240 4.8% 95.9%;
    --sidebar-accent-foreground: 240 5.9% 10%;
    --sidebar-border: 220 13% 91%;
    --sidebar-ring: 217.2 91.2% 59.8%;
  }

  .dark {
    /* MLETRAS Dark Theme - Musical Colors */
    --background: 220 26% 8%;
    --foreground: 210 40% 98%;

    --card: 220 26% 10%;
    --card-foreground: 210 40% 98%;

    --popover: 220 26% 10%;
    --popover-foreground: 210 40% 98%;

    /* Musical Purple Primary */
    --primary: 259 94% 51%;
    --primary-foreground: 210 40% 98%;
    --primary-glow: 259 94% 61%;

    /* Musical Blue Secondary */
    --secondary: 220 26% 14%;
    --secondary-foreground: 210 40% 98%;

    --muted: 220 26% 12%;
    --muted-foreground: 215 20.2% 65.1%;

    /* Accent Colors */
    --accent: 259 94% 51%;
    --accent-foreground: 210 40% 98%;
    --accent-light: 259 94% 61%;

    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 210 40% 98%;

    --border: 220 26% 16%;
    --input: 220 26% 14%;
    --ring: 259 94% 51%;

    /* Musical Gradients */
    --gradient-primary: linear-gradient(
      135deg,
      hsl(259 94% 51%),
      hsl(217 91% 60%)
    );
    --gradient-secondary: linear-gradient(
      135deg,
      hsl(220 26% 10%),
      hsl(220 26% 14%)
    );
    --gradient-accent: linear-gradient(
      135deg,
      hsl(259 94% 61%),
      hsl(259 94% 51%)
    );
    --gradient-hero: linear-gradient(
      135deg,
      hsl(259 94% 51%) 0%,
      hsl(217 91% 60%) 50%,
      hsl(259 94% 61%) 100%
    );

    /* Glass Effects */
    --glass-bg: hsla(220, 26%, 10%, 0.4);
    --glass-border: hsla(259, 94%, 51%, 0.2);

    /* Shadows */
    --shadow-glow: 0 0 40px hsla(259, 94%, 51%, 0.3);
    --shadow-soft: 0 10px 30px -10px hsla(220, 26%, 4%, 0.8);

    --sidebar-background: 240 5.9% 10%;
    --sidebar-foreground: 240 4.8% 95.9%;
    --sidebar-primary: 224.3 76.3% 48%;
    --sidebar-primary-foreground: 0 0% 100%;
    --sidebar-accent: 240 3.7% 15.9%;
    --sidebar-accent-foreground: 240 4.8% 95.9%;
    --sidebar-border: 240 3.7% 15.9%;
    --sidebar-ring: 217.2 91.2% 59.8%;
  }
}

@layer base {
  * {
    @apply border-border;
  }

  body {
    @apply bg-background text-foreground;
    font-family:
      -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  }
}

@layer components {
  /* Glass morphism effects */
  .glass {
    background: var(--glass-bg);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
  }

  /* Gradient backgrounds */
  .bg-gradient-primary {
    background: var(--gradient-primary);
  }

  .bg-gradient-hero {
    background: var(--gradient-hero);
  }

  .bg-gradient-accent {
    background: var(--gradient-accent);
  }

  /* Glow effects */
  .shadow-glow {
    box-shadow: var(--shadow-glow);
  }

  .shadow-soft {
    box-shadow: var(--shadow-soft);
  }

  /* Smooth transitions */
  .transition-smooth {
    transition: var(--transition-smooth);
  }

  .transition-spring {
    transition: var(--transition-spring);
  }

  /* Mobile-first responsive text */
  .text-mobile-hero {
    @apply text-3xl font-bold leading-tight;
  }

  .text-mobile-title {
    @apply text-xl font-semibold;
  }

  /* Tablet optimizations */
  @media (min-width: 768px) {
    .text-mobile-hero {
      @apply text-4xl;
    }
    
    .text-mobile-title {
      @apply text-2xl;
    }
    
    /* Larger touch targets for tablets */
    .touch-target {
      min-height: 48px;
      min-width: 48px;
    }
    
    /* Better spacing for tablets */
    .tablet-spacing {
      @apply p-6;
    }
    
    /* Larger lyrics text for tablets */
    .lyrics-text {
      font-size: 1.25rem !important;
      line-height: 1.8;
    }
    
    /* Better container width for tablets */
    .tablet-container {
      max-width: 600px;
      margin: 0 auto;
    }
  }

  /* Large tablet optimizations (10+ inches) */
  @media (min-width: 1024px) {
    .text-mobile-hero {
      @apply text-5xl;
    }
    
    .text-mobile-title {
      @apply text-3xl;
    }
    
    /* Even larger lyrics text for large tablets */
    .lyrics-text {
      font-size: 1.5rem !important;
      line-height: 2;
    }
    
    /* Wider container for large tablets */
    .tablet-container {
      max-width: 800px;
      margin: 0 auto;
    }
    
    /* Larger touch targets */
    .touch-target {
      min-height: 56px;
      min-width: 56px;
    }
    
    /* Better spacing */
    .tablet-spacing {
      @apply p-8;
    }
  }

  /* Safe area utilities */
  .safe-top {
    padding-top: max(var(--safe-area-inset-top), 1rem);
  }

  .safe-bottom {
    padding-bottom: max(var(--safe-area-inset-bottom), 1rem);
  }

  .safe-left {
    padding-left: max(var(--safe-area-inset-left), 1rem);
  }

  .safe-right {
    padding-right: max(var(--safe-area-inset-right), 1rem);
  }

  .safe-area {
    padding-top: max(var(--safe-area-inset-top), 1rem);
    padding-bottom: max(var(--safe-area-inset-bottom), 1rem);
    padding-left: max(var(--safe-area-inset-left), 1rem);
    padding-right: max(var(--safe-area-inset-right), 1rem);
  }

  /* Custom scrollbar for lyrics */
  .lyrics-scroll {
    touch-action: pan-y pinch-zoom;
    overscroll-behavior-y: contain;
  }

  .lyrics-scroll::-webkit-scrollbar {
    width: 4px;
  }

  .lyrics-scroll::-webkit-scrollbar-track {
    background: transparent;
  }

  .lyrics-scroll::-webkit-scrollbar-thumb {
    background: hsl(var(--primary));
    border-radius: 2px;
  }

  /* Touch-friendly lyrics area */
  .lyrics-touch-area {
    touch-action: pan-y pinch-zoom;
    user-select: none;
    -webkit-user-select: none;
    -webkit-touch-callout: none;
    overscroll-behavior: contain;
  }

  /* Smooth font size transitions */
  .lyrics-text {
    transition: font-size 0.1s ease-out;
  }

  /* Pinch gesture visual feedback */
  .lyrics-text:active {
    transform: scale(0.98);
  }

  /* Drag and drop styles */
  .drag-handle {
    cursor: grab;
    touch-action: none;
  }

  .drag-handle:active {
    cursor: grabbing;
  }

  /* Drag overlay styles */
  .dragging {
    opacity: 0.5;
    transform: rotate(5deg);
  }

  /* Sortable item hover effect */
  .sortable-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px -8px rgba(0, 0, 0, 0.2);
  }

  /* Clean focus removal - only remove purple overlay, keep functional feedback */
  button:focus,
  button:focus-visible {
    outline: none !important;
    box-shadow: none !important;
    --tw-ring-offset-shadow: none !important;
    --tw-ring-shadow: none !important;
  }

  /* Remove shadcn button focus rings */
  .inline-flex:focus-visible {
    outline: none !important;
    box-shadow: none !important;
    --tw-ring-offset-shadow: none !important;
    --tw-ring-shadow: none !important;
  }

  /* Remove any ring styles */
  [class*="ring-"] {
    box-shadow: none !important;
  }

  /* DEV-ONLY: Remove purple tap highlight effects - Comprehensive fix */
  
  /* Remove ALL focus and active state styling that causes purple overlays */
  *:focus,
  *:focus-visible,
  *:active,
  *:focus-within {
    outline: none !important;
    box-shadow: none !important;
    --tw-ring-offset-shadow: none !important;
    --tw-ring-shadow: none !important;
    --tw-ring-color: transparent !important;
    --tw-ring-offset-color: transparent !important;
    --tw-ring-width: 0px !important;
    --tw-ring-opacity: 0 !important;
    --tw-ring-offset-width: 0px !important;
  }

  /* Target all possible button and interactive element states */
  button,
  [role="button"],
  [tabindex],
  .cursor-pointer,
  .interactive,
  [onclick],
  [data-clickable] {
    outline: none !important;
    box-shadow: none !important;
  }

  button:focus,
  button:focus-visible,
  button:active,
  button:focus-within,
  [role="button"]:focus,
  [role="button"]:focus-visible,
  [role="button"]:active,
  [role="button"]:focus-within,
  [tabindex]:focus,
  [tabindex]:focus-visible,
  [tabindex]:active,
  [tabindex]:focus-within,
  .cursor-pointer:focus,
  .cursor-pointer:focus-visible,
  .cursor-pointer:active,
  .cursor-pointer:focus-within {
    outline: none !important;
    box-shadow: none !important;
    --tw-ring-offset-shadow: none !important;
    --tw-ring-shadow: none !important;
    --tw-ring-color: transparent !important;
    --tw-ring-offset-color: transparent !important;
    --tw-ring-width: 0px !important;
    --tw-ring-opacity: 0 !important;
    --tw-ring-offset-width: 0px !important;
  }

  /* Remove purple overlay from all divs and spans that might be clickable */
  div:focus,
  div:focus-visible,
  div:active,
  div:focus-within,
  span:focus,
  span:focus-visible,
  span:active,
  span:focus-within {
    outline: none !important;
    box-shadow: none !important;
    --tw-ring-offset-shadow: none !important;
    --tw-ring-shadow: none !important;
    --tw-ring-color: transparent !important;
    --tw-ring-offset-color: transparent !important;
    --tw-ring-width: 0px !important;
    --tw-ring-opacity: 0 !important;
    --tw-ring-offset-width: 0px !important;
  }

  /* Remove purple highlight from icons and SVGs */
  svg:focus,
  svg:focus-visible,
  svg:active,
  svg:focus-within,
  [data-icon]:focus,
  [data-icon]:focus-visible,
  [data-icon]:active,
  [data-icon]:focus-within {
    outline: none !important;
    box-shadow: none !important;
  }

  /* Disable webkit tap highlight completely */
  * {
    -webkit-tap-highlight-color: transparent !important;
    -webkit-touch-callout: none !important;
    -webkit-user-select: none !important;
    -moz-user-select: none !important;
    -ms-user-select: none !important;
    user-select: none !important;
  }

  /* Re-enable text selection for input fields */
  input,
  textarea,
  [contenteditable] {
    -webkit-user-select: text !important;
    -moz-user-select: text !important;
    -ms-user-select: text !important;
    user-select: text !important;
  }

/* Custom Utility Classes */
.glass {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

/* Beautiful gradient backgrounds */
.bg-gradient-purple {
  background: linear-gradient(135deg, hsl(260 35% 25%), hsl(260 50% 15%));
}

/* Logo container with glow effect */
.logo-glow {
  filter: drop-shadow(0 0 40px hsl(218 100% 50% / 0.3));
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.logo-glow:hover {
  transform: scale(1.05);
  filter: drop-shadow(0 0 40px hsl(218 100% 50% / 0.3)) brightness(1.1);
}

/* Input focus glow */
.input-glow:focus {
  box-shadow: 0 0 0 2px hsl(218 100% 50% / 0.3), 0 10px 30px -10px hsl(260 35% 15% / 0.1);
  border-color: hsl(218 100% 50%);
}

/* Button variants */
.btn-gradient {
  background: linear-gradient(135deg, hsl(195 100% 60%), hsl(218 100% 50%));
  color: white;
  border: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 10px 30px -10px hsl(260 35% 15% / 0.1);
}

.btn-gradient:hover {
  transform: translateY(-2px);
  box-shadow: 0 20px 60px -20px hsl(260 35% 15% / 0.15);
  filter: brightness(1.1);
}

.btn-gradient:active {
  transform: translateY(0);
}

/* Smooth entrance animations */
.animate-fade-in {
  animation: fadeIn 0.6s ease-out;
}

.animate-slide-up {
  animation: slideUp 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30px) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

